{% extends 'base.html.twig' %}

{% block title %}Phone Detail{% endblock %}

{% block body %}

<div class="container mt-3">
    <table class = "table table-dark">
        <thead>
            <tr>
                <th scope="col">Order ID</th>
                <th scope="col">Phone Name</th>
                <th scope="col">Quantity</th>
                <th scope="col">GuestName</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td scope="row">{{ order.id}}</td>
                <td scope="row">
                {% for a in order.phone %}
                  <a href="{{ path('phone_detail', {'id' : a.id }) }}">
                       {{ a.phonename }}
                  </a>
                  <br>
                {% endfor %}
                </td>
                <td scope="row">{{ order.quantity}}</td>
                <td scope="row">{{ order.guestname}}</td>              
                <td scope="row">
                    <a class="btn btn-danger" href="{{ path ('order_delete', {'id': order.id}) }}"onclick="return confirm('This publisher will be deleted!')">Delete</a>
            </tr>
        </tbody>
</div>
{% endblock %}