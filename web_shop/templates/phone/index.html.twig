{% extends 'base.html.twig' %}

{% block title %}Phone Information{% endblock %}

{% block body %}

<div class="container mt-3">
    {% for flash in app.flashes("Info") %}
        <p class="alert alert-primary"> {{ flash }} </p>
    {% endfor %}
    {% for flash in app.flashes("Error") %}
        <p class="alert alert-danger"> {{ flash }} </p>
    {% endfor %}
</div>
<div class="container-fluid">
<a class="btn btn-dark" href="{{ path ( 'phone_create' ) }}">Add New Phone</a>
<table class = "table table-dark">
    <thead>
        <tr>
            <th scope="col">Phone ID</th>
            <th scope="col">Phone Name</th>
            <th scope="col">Publisher</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for phone in phones %}
        <tr>
            <td scope="row">{{ phone.id}}</td>
            <td scope="row">{{ phone.phonename}}</td>
            <td scope="row">{{ phone.publisher}}</td>
            <td scope="row">
                <a class="btn btn-primary" href="{{ path('phone_detail', {'id': phone.id} )}}">Detail</a>
                <a class="btn btn-primary" href="{{ path('phone_update', {'id': phone.id} )}}">Update</a>
                <a class="btn btn-danger" href="{{ path('phone_delete', {'id': phone.id} )}}"
                onclick="return confirm('This publisher will be deleted!')">Delete</a>
        </tr>
    </tbody>
    {% endfor %}
</div>
{% endblock %}
