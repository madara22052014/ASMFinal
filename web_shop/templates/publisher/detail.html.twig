{% extends 'base.html.twig' %}

{% block title %}Publisher Detail{% endblock %}

{% block body %}

<div class="container mt-3">
    <table class = "table table-secondary">
        <thead>
            <tr>
                <th scope="col">Publisher ID</th>
                <th scope="col">Company Name</th>
                <th scope="col">Country</th>
                <th scope="col">Founded Year</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td scope="row">{{ publisher.id}}</td>
                <td scope="row">{{ publisher.companyname}}</td>
                <td scope="row">{{ publisher.country}}</td>
                <td scope="row">{{ publisher.founded}}</td>                
                <td scope="row">
                    <a class="btn btn-primary" href="{{ path ('publisher_update', {'id': publisher.id} )}}">Update</a>
                    <a class="btn btn-danger" href="{{ path ('publisher_delete', {'id': publisher.id}) }}" onclick="return confirm('This publisher will be deleted!')">Delete</a>
            </tr>
        </tbody>
</div>
{% endblock %}
